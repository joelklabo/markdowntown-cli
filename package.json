{
  "name": "markdowntown-root",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "node scripts/dev-all.mjs",
    "dev:web": "pnpm -C apps/web dev",
    "dev:worker": "node scripts/dev-worker.mjs",
    "dev:wasm": "node scripts/watch-wasm.mjs",
    "lint": "pnpm -C apps/web lint && cd cli && make lint",
    "lint:md": "npx markdownlint-cli \"**/*.md\" --ignore \"**/node_modules/**\" --ignore \"**/out/**\" --ignore \"**/.vscode-test/**\" --config .markdownlint.json",
    "fmt:md": "npx markdownlint-cli \"**/*.md\" --fix --ignore \"**/node_modules/**\" --ignore \"**/out/**\" --ignore \"**/.vscode-test/**\" --config .markdownlint.json",
    "compile": "pnpm -C apps/web compile",
    "test": "pnpm -C apps/web test && cd cli && make test",
    "test:all": "pnpm -C apps/web test && cd cli && make test",
    "wasm:build": "bash cli/scripts/build-wasm.sh",
    "wasm:smoke": "node scripts/wasm-smoke.mjs"
  }
}
