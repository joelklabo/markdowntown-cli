{
  "name": "markdowntown",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "next dev --webpack",
    "dev:webpack": "next dev --webpack",
    "dev:turbo": "next dev --turbo",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint/ && pnpm lint:hex && pnpm lint:neutrals",
    "lint:knip": "knip --workspace . --include dependencies,unlisted,exports --treat-config-hints-as-errors",
    "lint:cycles": "dependency-cruise --cache --config dependency-cruiser.config.cjs --ignore-known .dependency-cruiser-known-violations.json src",
    "compile": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:e2e": "E2E_BASE_URL=${E2E_BASE_URL:-http://localhost:3000} vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "mcp:health": "node scripts/mcp-devtools-health.mjs",
    "lint:md": "node scripts/lint-markdown.js \"**/*.md\" \"!node_modules/**\" \"!.next/**\" \"!coverage/**\" \"!dist/**\" \"!test-results/**\"",
    "lint:hex": "node scripts/check-no-raw-hex.mjs",
    "lint:neutrals": "node scripts/check-no-tailwind-neutrals.mjs",
    "format:styles": "prettier src/app/globals.css --write",
    "docs:openapi": "node scripts/validate-openapi.js",
    "analyze": "ANALYZE=true pnpm exec next build --webpack",
    "bundle:check": "node scripts/check-bundle-size.mjs",
    "bd:validate": "node scripts/bd-validate-jsonl.mjs",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test:visual": "env -u NO_COLOR pnpm exec playwright test --config=playwright-visual.config.ts",
    "atlas:validate": "node --no-warnings scripts/atlas/validate.ts",
    "atlas:index": "node scripts/atlas/index.mjs",
    "atlas:fetch": "node --no-warnings scripts/atlas/fetch-sources.ts",
    "atlas:extract": "node --no-warnings scripts/atlas/extract-facts.ts",
    "atlas:changelog": "node scripts/atlas/changelog.mjs",
    "atlas:update": "pnpm atlas:fetch && pnpm atlas:extract && pnpm atlas:index && pnpm atlas:validate && pnpm atlas:changelog",
    "prisma:validate": "prisma validate",
    "seed:demo": "node --no-warnings scripts/seed-demo-artifacts.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.5.0",
    "@mdx-js/mdx": "^3.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.18.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@sentry/nextjs": "^8.55.0",
    "class-variance-authority": "^0.7.1",
    "import-in-the-middle": "1.15.0",
    "jszip": "^3.10.1",
    "next": "16.0.10",
    "next-auth": "^4.24.13",
    "posthog-js": "^1.200.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "require-in-the-middle": "7.5.2",
    "web-vitals": "^4.2.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.6",
    "@playwright/test": "1.57.0",
    "@storybook/addon-a11y": "10.1.3",
    "@storybook/addon-actions": "9.0.8",
    "@storybook/addon-backgrounds": "9.0.8",
    "@storybook/addon-controls": "9.0.8",
    "@storybook/addon-docs": "10.1.3",
    "@storybook/addon-links": "10.1.3",
    "@storybook/addon-toolbars": "9.0.8",
    "@storybook/nextjs": "10.1.3",
    "@storybook/react": "10.1.3",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "4.0.14",
    "dependency-cruiser": "^17.3.4",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globby": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "knip": "^5.75.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.19.1",
    "playwright": "^1.57.0",
    "postcss": "^8.4.41",
    "prettier": "^3.4.2",
    "prisma": "^5.18.0",
    "storybook": "10.1.3",
    "tailwindcss": "^4.0.0",
    "typescript": "^5",
    "unified": "^11.0.5",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --fix --max-warnings=0"
    ],
    "*.md": [
      "pnpm lint:md"
    ]
  }
}
