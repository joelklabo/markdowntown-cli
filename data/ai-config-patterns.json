{
  "version": "1.0",
  "patterns": [
    {
      "id": "github-copilot-instructions",
      "toolId": "github-copilot",
      "toolName": "GitHub Copilot",
      "kind": "instructions",
      "scope": "repo",
      "paths": [".github/copilot-instructions.md"],
      "type": "glob",
      "loadBehavior": "single",
      "application": "automatic",
      "notes": "Requires VS Code setting to apply",
      "hints": [
        {
          "type": "requires-setting",
          "setting": "github.copilot.chat.codeGeneration.useInstructionFiles"
        }
      ],
      "docs": [
        "https://docs.github.com/en/copilot/customizing-copilot/adding-repository-custom-instructions-for-github-copilot"
      ]
    },
    {
      "id": "github-copilot-instructions-dir",
      "toolId": "github-copilot",
      "toolName": "GitHub Copilot",
      "kind": "instructions",
      "scope": "repo",
      "paths": [".github/instructions/*.instructions.md"],
      "type": "glob",
      "loadBehavior": "directory-glob",
      "application": "pattern-matched",
      "applicationField": "applyTo",
      "notes": "Requires VS Code setting to apply",
      "hints": [
        {
          "type": "requires-setting",
          "setting": "github.copilot.chat.codeGeneration.useInstructionFiles"
        }
      ],
      "docs": [
        "https://docs.github.com/en/copilot/customizing-copilot/adding-repository-custom-instructions-for-github-copilot"
      ]
    },
    {
      "id": "github-copilot-prompts",
      "toolId": "github-copilot",
      "toolName": "GitHub Copilot",
      "kind": "prompts",
      "scope": "repo",
      "paths": [".github/prompts/*.prompt.md"],
      "type": "glob",
      "loadBehavior": "directory-glob",
      "application": "selected",
      "docs": [
        "https://docs.github.com/en/copilot/customizing-copilot/adding-repository-custom-instructions-for-github-copilot"
      ]
    },
    {
      "id": "github-copilot-agents",
      "toolId": "github-copilot",
      "toolName": "GitHub Copilot",
      "kind": "instructions",
      "scope": "repo",
      "paths": ["AGENTS.md"],
      "type": "glob",
      "loadBehavior": "nearest-ancestor",
      "application": "automatic",
      "notes": "Nearest AGENTS.md applies when VS Code settings enable AGENTS support",
      "hints": [
        {
          "type": "requires-setting",
          "setting": "chat.useAgentsMdFile"
        },
        {
          "type": "requires-setting",
          "setting": "chat.useNestedAgentsMdFiles"
        }
      ],
      "docs": [
        "https://code.visualstudio.com/docs/copilot/customization/custom-instructions"
      ]
    },
